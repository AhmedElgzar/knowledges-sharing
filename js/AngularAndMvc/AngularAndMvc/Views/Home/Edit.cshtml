    <form name="postNews" novalidate>
        <div>
            <label for="Name">Name</label>
            <input type="text" ng-model="news.Name" name="Name" required />
            <span class="error" ng-show="postNews.$error.required">Required!</span>
        </div>
        <div>
            <textarea ng-model="news.Content"></textarea>
        </div>
        <div>
             <button ng-click="save(postNews)">Save</button>
        </div>
    </form>
 </div>
